rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // PRODUCTION-READY RULES
    // All writes go through API routes with Firebase Admin SDK
    // Client can only read certain data
    
    // Users collection - Client CANNOT write directly (only via API routes)
    match /users/{userId} {
      // No direct client access - all operations through API routes
      allow read, write: if false;
      
      // Cart subcollection - No direct client access
      match /cart/{cartId} {
        allow read, write: if false;
      }
    }
    
    // Orders collection - Client CANNOT write directly
    match /orders/{orderId} {
      // All operations through API routes only
      allow read, write: if false;
    }
    
    // Products collection - Read-only for all users (if you add products later)
    match /products/{productId} {
      allow read: if true;
      allow write: if false;
    }
  }
}


